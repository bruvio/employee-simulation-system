[flake8]
max-line-length = 120
max-complexity = 10
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    F401,  # imported but unused (handled by IDEs)
    E501   # line too long (handled by black)
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    artifacts,
    images
per-file-ignores =
    __init__.py:F401
    tests/*:D103,D100  # Allow missing docstrings in tests